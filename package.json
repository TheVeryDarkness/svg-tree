{
  "name": "tree2svg",
  "version": "1.0.10",
  "description": "TS library for rendering tree objects into SVG.",
  "type": "module",
  "main": "dist/svg.js",
  "module": "dist/svg.js",
  "types": "dist/svg.d.ts",
  "files": [
    "dist",
    "!**/tsconfig.tsbuildinfo"
  ],
  "exports": {
    ".": {
      "types": "./dist/svg.d.ts",
      "import": "./dist/svg.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.js"
    },
    "./*.js": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.js"
    }
  },
  "scripts": {
    "list-ts": "tsc --listFilesOnly",
    "build": "tsc --build src",
    "dev": "tsc --watch src",
    "clean": "rm -r dist && rm -r dist-tests || true",
    "build:tests": "tsc -p tests/tsconfig.json && rollup -c ./tests/rollup.config.js",
    "dev:tests": "rollup -c ./tests/rollup.config.js --watch",
    "test": "qunit dist-tests/tests.js",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "svg",
    "typescript",
    "graphics",
    "rendering"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@loonguo/rollup-plugin-raw": "^0.0.5",
    "@rollup/plugin-commonjs": "^28.0.8",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/qunit": "^2.19.13",
    "prettier": "^3.6.2",
    "qunit": "^2.24.2",
    "rollup": "^4.52.5",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2"
  }
}
